<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FactorialActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="800dp"
        app:srcCompat="@drawable/fibonacci2"
        android:alpha="0.8"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/multiFactorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MultiplicaciÃ³n = "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/resultadoFactorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado = "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/multiFactorial"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>